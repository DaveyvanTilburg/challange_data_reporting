@model Domain.ValueGrouping.IValueGrouping
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div id="container"></div>
</div>

@section Scripts
{
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>
    <script src="https://code.highcharts.com/modules/export-data.js"></script>
    <script src="https://code.highcharts.com/modules/accessibility.js"></script>
    
    <script>
        const input = JSON.parse('@Html.Raw(Model.Chart().ToString())');

        console.log(input);
        console.log(input.pointCategories);
        console.log(input.chartLines);
        
        Highcharts.chart('container', {
            chart: {
                type: 'line'
            },
            title: {
                text: input.title
            },
            xAxis: {
                categories: input.pointCategories
            },
            yAxis: {
                title: {
                    text: 'Value'
                }
            },
            plotOptions: {
                line: {
                    dataLabels: {
                        enabled: true
                    },
                    enableMouseTracking: false
                }
            },
            series: input.chartLines
        });
    </script>
}